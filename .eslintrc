{
  "parser": "babel-eslint",

  "env": {
    "es6"     : true,
    "node"    : true,
    "browser" : true,
  },

  "globals": {
    "$"         : true,
    "jQuery"    : true,
  },

  "ecmaFeatures" : {
    "jsx": true,
    "objectLiteralShorthandMethods" : true
  },

  "plugins": [
    "react"
  ],

  "extends": "eslint:recommended",

  "rules": {
    // Recommended
    "no-empty"                : 1,
    "no-cond-assign"          : 1,
    "no-redeclare"            : 1,
    "no-irregular-whitespace" : 1,
    "no-extra-boolean-cast"   : 1,
    "valid-typeof"            : 1,

    // Possible Errors
    "comma-dangle"            : [1, "always-multiline"],
    "no-console"              : 0,
    "no-extra-semi"           : 2,
    "valid-jsdoc"             : 1,
    "no-unexpected-multiline" : 2,

    // Best Practices
    "block-scoped-var"      : 1,
    "complexity"            : [1, 10],
    "consistent-return"     : 1,
    "curly"                 : 1,
    "default-case"          : 2,
    "dot-notation"          : [1, {"allowKeywords": true }],
    "dot-location"          : [1, "property"],
    "eqeqeq"                : [1, "allow-null"],
    "guard-for-in"          : 1,
    "no-alert"              : 1,
    "no-caller"             : 1,
    "no-eval"               : 2,
    "no-extend-native"      : 1,
    "no-extra-bind"         : 2,
    "no-floating-decimal"   : 2,
    "no-implied-eval"       : 2,
    "no-invalid-this"       : 1,
    "no-iterator"           : 2,
    "no-labels"             : 1,
    "no-lone-blocks"        : 2,
    "no-loop-func"          : 1,
    "no-multi-str"          : 2,
    "no-native-reassign"    : 1,
    "no-new-func"           : 2,
    "no-new-wrappers"       : 2,
    "no-new"                : 1,
    "no-octal-escape"       : 2,
    "no-param-reassign"     : [1, {"props": true}],
    "no-proto"              : 2,
    "no-return-assign"      : 2,
    "no-script-url"         : 1,
    "no-self-compare"       : 2,
    "no-sequences"          : 2,
    "no-throw-literal"      : 1,
    "no-unused-expressions" : [2, {"allowTernary": true}], // 三項演算子は許可
    "no-useless-call"       : 2,
    "no-useless-concat"     : 1,
    "no-void"               : 2,
    "no-warning-comments"   : [1, { "terms": ["todo", "fixme", "xxx"] }],
    "no-with"               : 2,
    "radix"                 : 1,
    "yoda"                  : [1, "never", { "exceptRange": true }],

    // Strict
    "strict" : [1, "global"],

    // Variables
    "no-delete-var"              : 2,
    "no-label-var"               : 2,
    "no-shadow-restricted-names" : 2,
    "no-shadow"                  : 1,
    "no-undef-init"              : 2,
    "no-undef"                   : 2,
    "no-unused-vars"             : 1,
    "no-use-before-define"       : 1,

    // Node.js and CommonJS
    "callback-return"     : 1,
    "global-require"      : 1,
    "handle-callback-err" : 2,
    "no-mixed-requires"   : [2, true],
    "no-new-require"      : 1,
    "no-path-concat"      : 1,
    "no-process-exit"     : 1,
    "no-sync"             : 1,

    // Stylistic Issues
    "array-bracket-spacing"       : [1, "never"],
    "block-spacing"               : [1, "always"],
    "brace-style"                 : [1, "stroustrup", { "allowSingleLine": true }],
    "camelcase"                   : [1, {"properties": "always"}],
    "comma-spacing"               : 1,
    "comma-style"                 : [1, "last"],
    "computed-property-spacing"   : [1, "never"],
    "consistent-this"             : [1, "self"],
    "eol-last"                    : 1,
    "func-style"                  : [1, "expression"],
    "indent"                      : [1, 4, {"SwitchCase": 0}],
    "jsx-quotes"                  : [2, "prefer-double"],
    "key-spacing"                 : 0,  // 人によって書き方違うので
    "keyword-spacing"             : 1,
    "lines-around-comment"        : [1,
      { "beforeBlockComment" : true, "beforeLineComment" : false }
    ],
    "linebreak-style"             : [2, "unix"],
    "max-nested-callbacks"        : [2, 5],
    "new-cap"                     : 1,
    "new-parens"                  : 2,
    "newline-after-var"           : 0,
    "no-array-constructor"        : 2,
    "no-continue"                 : 1,
    "no-lonely-if"                : 1,
    "no-mixed-spaces-and-tabs"    : 1,
    "no-multiple-empty-lines"     : [2, {"max": 2}],
    "no-nested-ternary"           : 1,
    "no-new-object"               : 2,
    "no-spaced-func"              : 1,
    "no-ternary"                  : 1,
    "no-trailing-spaces"          : 1,
    "no-underscore-dangle"        : 1,
    "no-unneeded-ternary"         : 1,
    "object-curly-spacing"        : [1, "always"],
    "operator-assignment"         : [1, "always"],
    "operator-linebreak"          : [1, "after"],
    "quote-props"                 : [1, "as-needed"],
    "quotes"                      : [1, "single", "avoid-escape"],
    "semi-spacing"                : [1, {"before": false, "after": true}],
    "semi"                        : [1, "always"],
    "sort-vars"                   : 0,
    "space-before-blocks"         : 1,
    "space-before-function-paren" : 1,
    "space-in-parens"             : [1, "never"],
    "space-infix-ops"             : 1,
    "space-unary-ops"             : [1, { "words": true, "nonwords": false }],
    "spaced-comment"              : [1, "always"],

    // ES6
    "arrow-parens"           : 0,
    "arrow-spacing"          : 1,
    "constructor-super"      : 2,
    "generator-star-spacing" : [2, {"before": false, "after": true}],
    "no-class-assign"        : 2,
    "no-const-assign"        : 2,
    "no-dupe-class-members"  : 2,
    "no-this-before-super"   : 2,
    "no-var"                 : 0,
    "object-shorthand"       : [0, "always"],
    "prefer-arrow-callback"  : 1,
    "prefer-const"           : 1,
    "prefer-spread"          : 1,
    "prefer-reflect"         : 0,
    "prefer-template"        : 1,
    "require-yield"          : 1,

    // React
    "react/display-name"                 : [2, {"ignoreTranspilerName" : false}],
    "react/forbid-prop-types"            : 1,
    "react/jsx-boolean-value"            : [1, "always"],
    "react/jsx-closing-bracket-location" : [2, "after-props"],
    "react/jsx-curly-spacing"            : [2, "never", {"allowMultiline": false}],
    "react/jsx-indent-props"             : [2, 2],
    "react/jsx-max-props-per-line"       : [2, {maximum: 3}],
    "react/jsx-no-duplicate-props"       : 2,
    "react/jsx-no-literals"              : 0,
    "react/jsx-no-undef"                 : 2,
    "react/jsx-sort-props"               : 0,
    "react/jsx-uses-react"               : 2,
    "react/jsx-uses-vars"                : 2,
    "react/no-danger"                    : 1,
    "react/no-did-mount-set-state"       : 1,
    "react/no-did-update-set-state"      : 2,
    "react/no-direct-mutation-state"     : 2,
    "react/no-multi-comp"                : 1,
    "react/no-set-state"                 : 1,
    "react/no-unknown-property"          : 2,
    "react/prop-types"                   : 1,
    "react/react-in-jsx-scope"           : 2,
    "react/require-extension"            : 0,
    "react/self-closing-comp"            : 1,
    "react/sort-comp"                    : 1,
    "react/sort-prop-types"              : 0,
    "react/jsx-wrap-multilines"          : 2,

    // Legacy
    "no-bitwise" : 2,
  },
}
